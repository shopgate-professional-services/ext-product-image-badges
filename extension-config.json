{
  "version": "1.3.1",
  "id": "@shopgate-project/product-image-badges",
  "components": [
    {
      "id": "ProductItemPriceBefore",
      "type": "portals",
      "path": "frontend/portals/ProductItemPriceBefore",
      "target": "product-item.price.before"
    },
    {
      "id": "ComponentProductImageBefore",
      "type": "portals",
      "path": "frontend/portals/ComponentProductImageBefore",
      "target": "component.product-image.before"
    },
    {
      "id": "ProductItemImageBefore",
      "type": "portals",
      "path": "frontend/portals/ProductItemImageBefore",
      "target": "product-item.image.before"
    }
  ],
  "configuration": {
    "badgeMap": {
      "type": "admin",
      "default": [
        {
          "triggerTags": [],
          "triggerProps": [],
          "src": ""
        },
        {
          "triggerTags": [],
          "triggerProps": [],
          "src": ""
        }
      ],
      "destination": "frontend",
      "params": {
        "label": "Mapping for tag and image srcs",
        "description": "The various tags/properties and src associations for extension. The badge hierarchy for items with multiple trigger tags is determined by array.",
        "type": "json"
      }
    },
    "badgeDisplayCount": {
      "type": "admin",
      "default": 1,
      "destination": "frontend",
      "params": {
        "label": "Total badges to display",
        "description": "The count for the number of badges to display",
        "type": "number"
      }
    },
    "badgeWidth": {
      "type": "admin",
      "default": "25",
      "destination": "frontend",
      "params": {
        "label": "Badge width percentage",
        "description": "Badge width percentage to be used for all badge location rendering",
        "type": "text"
      }
    },
    "maxBadgeWidth": {
      "type": "admin",
      "default": null,
      "destination": "frontend",
      "params": {
        "label": "Maximum Badge Width",
        "description": "Maximum badge width can be set to px",
        "type": "text"
      }
    },
    "showOnPdp": {
      "type": "admin",
      "default": true,
      "destination": "frontend",
      "params": {
        "label": "Show badges on Pdp",
        "type": "checkbox"
      }
    },
    "showOnSliders": {
      "type": "admin",
      "default": true,
      "destination": "frontend",
      "params": {
        "label": "Show badges on product sliders",
        "type": "checkbox"
      }
    },
    "showOnLists": {
      "type": "admin",
      "default": true,
      "destination": "frontend",
      "params": {
        "label": "Show badges on product lists",
        "type": "checkbox"
      }
    }
  }
}
