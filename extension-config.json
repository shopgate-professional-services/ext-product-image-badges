{
  "version": "1.5.0",
  "id": "@shopgate-project/product-image-badges",
  "components": [
    {
      "id": "ComponentProductImage",
      "type": "portals",
      "path": "frontend/portals/ComponentProductImage",
      "target": "component.product-image"
    }
  ],
  "configuration": {
    "badgeMap": {
      "type": "admin",
      "default": [],
      "destination": "frontend",
      "params": {
        "label": "Mapping for tag and image srcs",
        "description": "The various tags/properties and src associations for extension. The badge hierarchy for items with multiple trigger tags is determined by array.",
        "type": "json"
      }
    },
    "badgeDisplayCount": {
      "type": "admin",
      "default": 1,
      "destination": "frontend",
      "params": {
        "label": "Total badges to display",
        "description": "The count for the number of badges to display",
        "type": "number"
      }
    },
    "badgeWidth": {
      "type": "admin",
      "default": "50",
      "destination": "frontend",
      "params": {
        "label": "Badge width percentage",
        "description": "Badge width percentage to be used for badges rendering on the Pdp",
        "type": "text"
      }
    },
    "maxBadgeWidth": {
      "type": "admin",
      "default": null,
      "destination": "frontend",
      "params": {
        "label": "Maximum Badge Width",
        "description": "Maximum badge width can be set to px (Pdp)",
        "type": "text"
      }
    },
    "badgeWidthSliders": {
      "type": "admin",
      "default": "30",
      "destination": "frontend",
      "params": {
        "label": "Badge width percentage",
        "description": "Badge width percentage to be used for badges rendering on sliders",
        "type": "text"
      }
    },
    "maxBadgeWidthSliders": {
      "type": "admin",
      "default": null,
      "destination": "frontend",
      "params": {
        "label": "Maximum Badge Width",
        "description": "Maximum badge width can be set to px (sliders)",
        "type": "text"
      }
    },
    "badgeWidthLists": {
      "type": "admin",
      "default": "30",
      "destination": "frontend",
      "params": {
        "label": "Badge width percentage",
        "description": "Badge width percentage to be used for badges rendering on products lists",
        "type": "text"
      }
    },
    "maxBadgeWidthLists": {
      "type": "admin",
      "default": null,
      "destination": "frontend",
      "params": {
        "label": "Maximum Badge Width",
        "description": "Maximum badge width can be set to px (product lists)",
        "type": "text"
      }
    },
    "showOnPdp": {
      "type": "admin",
      "default": true,
      "destination": "frontend",
      "params": {
        "label": "Show badges on Pdp",
        "type": "checkbox"
      }
    },
    "showOnSliders": {
      "type": "admin",
      "default": true,
      "destination": "frontend",
      "params": {
        "label": "Show badges on product sliders",
        "type": "checkbox"
      }
    },
    "showOnLists": {
      "type": "admin",
      "default": true,
      "destination": "frontend",
      "params": {
        "label": "Show badges on product lists",
        "type": "checkbox"
      }
    },
    "badgePositionPdp": {
      "type": "admin",
      "default": "bottomLeft",
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge",
        "type": "text"
      }
    },
    "badgePositionSliders": {
      "type": "admin",
      "default": "bottomLeft",
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge",
        "type": "text"
      }
    },
    "badgePositionLists": {
      "type": "admin",
      "default": "bottomLeft",
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge",
        "type": "text"
      }
    },
    "badgeStylingPdp": {
      "type": "admin",
      "default": {},
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge",
        "type": "json"
      }
    },
    "badgeStylingSliders": {
      "type": "admin",
      "default": {},
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge",
        "type": "json"
      }
    },
    "badgeStylingLists": {
      "type": "admin",
      "default": {},
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge",
        "type": "json"
      }
    }
  }
}
