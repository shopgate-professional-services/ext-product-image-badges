{
  "version": "1.5.0",
  "id": "@shopgate-project/product-image-badges",
  "components": [
    {
      "id": "ComponentProductImage",
      "type": "portals",
      "path": "frontend/portals/ComponentProductImage",
      "target": "component.product-image"
    }
  ],
  "configuration": {
    "badgeMap": {
      "type": "admin",
      "default": [],
      "destination": "frontend",
      "params": {
        "label": "Mapping for tag and image srcs",
        "description": "The various tags/properties and src associations for extension. The badge hierarchy for items with multiple trigger tags is determined by array.",
        "type": "json"
      }
    },
    "badgeDisplayCount": {
      "type": "admin",
      "default": 1,
      "destination": "frontend",
      "params": {
        "label": "Total badges to display",
        "description": "The count for the number of badges to display",
        "type": "number"
      }
    },
    "showOnPdp": {
      "type": "admin",
      "default": true,
      "destination": "frontend",
      "params": {
        "label": "Show badges on Pdp",
        "type": "checkbox"
      }
    },
    "showOnSliders": {
      "type": "admin",
      "default": true,
      "destination": "frontend",
      "params": {
        "label": "Show badges on product sliders",
        "type": "checkbox"
      }
    },
    "showOnLists": {
      "type": "admin",
      "default": true,
      "destination": "frontend",
      "params": {
        "label": "Show badges on product lists",
        "type": "checkbox"
      }
    },
    "badgePositionPdp": {
      "type": "admin",
      "default": "topLeft",
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge",
        "type": "text"
      }
    },
    "badgePositionSliders": {
      "type": "admin",
      "default": "topLeft",
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge",
        "type": "text"
      }
    },
    "badgePositionLists": {
      "type": "admin",
      "default": "topLeft",
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge",
        "type": "text"
      }
    },
    "badgeContainerStylingPdp": {
      "type": "admin",
      "default": {},
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge container",
        "type": "json"
      }
    },
    "badgeContainerStylingSliders": {
      "type": "admin",
      "default": {},
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge container",
        "type": "json"
      }
    },
    "badgeContainerStylingLists": {
      "type": "admin",
      "default": {},
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge container",
        "type": "json"
      }
    },
    "badgeStylingPdp": {
      "type": "admin",
      "default": {
        "height": 35
      },
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge",
        "type": "json"
      }
    },
    "badgeStylingSliders": {
      "type": "admin",
      "default": {
        "height": 20
      },
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge",
        "type": "json"
      }
    },
    "badgeStylingLists": {
      "type": "admin",
      "default": {
        "height": 20
      },
      "destination": "frontend",
      "params": {
        "label": "Css styling for the badge",
        "type": "json"
      }
    }
  }
}
